= form_for @rooftop_allocation do |f|
  - if @rooftop_allocation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rooftop_allocation.errors.count, "error")} prohibited this rooftop_allocation from being saved:"
      %ul
        - @rooftop_allocation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :allocation_basis
    = f.text_field :allocation_basis
  .field
    = f.label :period
    = f.date_select :period
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :allocation
    = f.text_field :allocation
  .actions
    = f.submit 'Save'
